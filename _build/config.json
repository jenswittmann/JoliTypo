{
    "name": "JoliTypo",
    "lowCaseName": "jolitypo",
    "description": "JoliTypo  Microtypography as output modifer for MODX",
    "author": "Jens Wittmann",
    "version": "1.1.0-pl",
    "package": {
        "elements": {
            "snippets": [
                {
                    "name": "jolitypo",
                    "file": "jolitypo.snippet.php"
                }
            ]
        },
        "systemSettings": [
            {
                "key": "customReplaces",
                "type": "textarea",
                "area": "default",
                "value": ""
            },
            {
                "key": "locale",
                "type": "textfield",
                "area": "default",
                "value": "de_DE"
            },
            {
                "key": "standardFixers",
                "type": "textfield",
                "area": "default",
                "value": "Ellipsis Dimension Dash SmartQuotes NoSpaceBeforeComma Trademark"
            }
        ]
    },
    "dependencies": [
        {
            "name": "php",
            "version": ">=7.4"
        },
        {
            "name": "modx",
            "version": ">=2.8"
        }
    ],
    "build": {
        "readme": "docs/readme.txt",
        "license": "docs/license.txt",
        "changelog": "docs/changelog.txt",
        "options": {
            "composer": true
        },
        "resolver": {
            "after": ["resolve.composer.php"]
        }
    }
}
